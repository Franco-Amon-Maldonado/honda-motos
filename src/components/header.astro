---
import logo from "../img/logoHonda.png"

console.log(Astro.url.pathname);
---

<header class="header">
    
    <div class="contenedor barra">
        <a href="/">
        <img src={logo} alt="Imagen logotipo">
    </a>

        <nav class="navegacion">
            <a class={Astro.url.pathname === '/' ? 'active' : ''}  href="/">Inicio</a>
            <a class={Astro.url.pathname === '/nosotros' ? 'active' : ''} href="/nosotros">Nosotros</a>
            <a class={Astro.url.pathname === '/blog' ? 'active' : ''} href="/blog">Blog</a>
            <a class={Astro.url.pathname === '/motos' ? 'active' : ''} href="/motos">Motos</a>
        </nav>
    </div>

</header>


<style>
.header {
    background-image: linear-gradient(to right, rgb(0 0 0 / .8), rgb(0 0 0 / .7)), url(../img/header.webp);
    padding: 4rem 0;
    background-position: center;
    background-size: cover;
}
.header img {
    width: 25rem;
    opacity: .8;
}

.barra {
    display: flex;
    flex-direction: column;
    align-items: center;
}
@media (min-width: 768px) {
    .barra {
        flex-direction: row;
        justify-content: space-between;
    }
}

.navegacion {
    margin-top: 5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
}
@media (min-width: 768px) {
    .navegacion {
        margin: 0;
    }
}
.navegacion a {
    color: var(--text-200);
    text-decoration: none;
    font-size: 1.4rem;
    border-radius: 20px;
    font-weight: 700;
    text-transform: uppercase;
    padding: .7rem;
    transition-property: background-color;
    transition-duration: 300ms;
}
.navegacion a:hover,
.active {
    background-color: var(--secondary);
}

</style>